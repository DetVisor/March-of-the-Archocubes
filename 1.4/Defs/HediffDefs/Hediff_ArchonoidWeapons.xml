<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<HediffDef ParentName = "PsycastHediffBase">
    <defName>DV_PsychicPain</defName>
    <label>psychic pain</label>
    <description>Psychically-induced pain.</description>
    <isBad>true</isBad>
    <comps>
        <li Class="HediffCompProperties_SeverityPerDay">
          <severityPerDay>-0.2</severityPerDay>
          <showHoursToRecover>true</showHoursToRecover>
        </li>
      </comps>
    <stages>
      <li>
        <label>light</label>
        <painFactor>1.2</painFactor>
        <capacityFactorEffectMultiplier>PsychicSensitivity</capacityFactorEffectMultiplier>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>medium</label>
        <painFactor>1.5</painFactor>
        <capacityFactorEffectMultiplier>PsychicSensitivity</capacityFactorEffectMultiplier>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>intense</label>
        <painFactor>1.5</painFactor>
        <capacityFactorEffectMultiplier>PsychicSensitivity</capacityFactorEffectMultiplier>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <label>incapacitating</label>
        <painFactor>2</painFactor>
        <capacityFactorEffectMultiplier>PsychicSensitivity</capacityFactorEffectMultiplier>
      </li>
    </stages>
  </HediffDef>

</Defs>